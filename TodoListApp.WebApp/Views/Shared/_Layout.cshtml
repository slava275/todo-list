<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoListApp.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (ViewData["HideNavBar"] == null)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="TodoList" asp-action="Index">To-do List</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="TodoList" asp-action="Index">
                                    <i class="bi bi-list-check"></i> My To-dos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="TasksApp" asp-action="Assigned">
                                    <i class="bi bi-card-checklist"></i> My Tasks
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="TagsApp" asp-action="Index">
                                    <i class="bi bi-tags"></i> Tags
                                </a>
                            </li>
                        </ul>

                        <ul class="navbar-nav">
                            @if (Context.Request.Cookies.ContainsKey("jwtToken"))
                            {
                                <li class="nav-item">
                                    <form asp-controller="AccountApp" asp-action="Logout" method="post" class="form-inline">
                                        <button type="submit" class="nav-link btn btn-link text-dark border-0">
                                            <i class="bi bi-box-arrow-right"></i> Вихід
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="AccountApp" asp-action="Login">Вхід</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="AccountApp" asp-action="Register">Реєстрація</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewData["HideNav"] == null)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2026 - TodoListApp.WebApp - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>