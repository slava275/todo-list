@using TodoListApp.WebApi.Models.Models
@model IEnumerable<TaskModel>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Усі теги</a></li>
            <li class="breadcrumb-item active">#@ViewBag.TagName</li>
        </ol>
    </nav>

    <h3>Завдання з тегом: <span class="badge bg-primary">#@ViewBag.TagName</span></h3>

    <div class="list-group mt-4 shadow-sm">
        @if (Model.Any())
        {
            @foreach (var task in Model)
            {
                <a asp-controller="TasksApp" asp-action="Details" asp-route-id="@task.Id"
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">@task.Title</h6>
                        <small class="text-muted">@task.Description</small>
                    </div>
                    <span class="badge bg-secondary rounded-pill">@task.Status</span>
                </a>
            }
        }
        else
        {
            <div class="p-5 text-center bg-light rounded">
                <p class="text-muted">Завдань з цим тегом не знайдено.</p>
            </div>
        }
    </div>
</div>