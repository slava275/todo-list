@using TodoListShared.Models.Models
@model TaskModel

@{
    ViewData["Title"] = "Деталі завдання";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> @ViewData["Title"]</h4>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-sm-3 fw-bold">Назва:</div>
                        <div class="col-sm-9">@Model.Title</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-3 fw-bold">Опис:</div>
                        <div class="col-sm-9 text-muted">@(string.IsNullOrEmpty(Model.Description) ? "Опис відсутній" : Model.Description)</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-3 fw-bold">Статус:</div>
                        <div class="col-sm-9">
                            @{
                                string badgeClass = Model.Status.ToString() switch
                                {
                                    "New" => "bg-info text-dark",
                                    "InProgress" => "bg-primary",
                                    "Completed" => "bg-success",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@Model.Status</span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-3 fw-bold">Дедлайн:</div>
                        <div class="col-sm-9">
                            @Model.DueDate?.ToString("dd MMMM yyyy")
                            @if (Model.Status.ToString() != "Completed" && Model.DueDate < DateTime.Now)
                            {
                                <span class="text-danger ms-2">(Протерміновано)</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted d-block">Теги:</label>
                        @if (Model.Tags != null && Model.Tags.Any())
                        {
                            <div class="d-flex flex-wrap gap-2 mt-1">
                                @foreach (var tag in Model.Tags)
                                {
                                    <span class="badge rounded-pill bg-light text-dark border shadow-sm">
                                        <i class="bi bi-tag text-primary me-1"></i>
                                        @tag.Name
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted small"><em>Теги відсутні</em></span>
                        }
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" asp-route-todolistId="@Model.TodoListId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Назад до списку
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 me-2">
                                <i class="bi bi-pencil"></i> Редагувати
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>