@using TodoListShared.Models.Models
@model TaskModel

@{
    ViewData["Title"] = "Деталі завдання";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card shadow border-0 mb-5">
                <div class="card-header bg-info text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> @ViewData["Title"]</h4>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-sm-3 fw-bold">Назва:</div>
                        <div class="col-sm-9">@Model.Title</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-3 fw-bold">Опис:</div>
                        <div class="col-sm-9 text-muted">@(string.IsNullOrEmpty(Model.Description) ? "Опис відсутній" : Model.Description)</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-3 fw-bold">Статус:</div>
                        <div class="col-sm-9">
                            @{
                                string badgeClass = Model.Status.ToString() switch
                                {
                                    "New" => "bg-info text-dark",
                                    "InProgress" => "bg-primary",
                                    "Completed" => "bg-success",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@Model.Status</span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-3 fw-bold">Дедлайн:</div>
                        <div class="col-sm-9">
                            @Model.DueDate?.ToString("dd MMMM yyyy")
                            @if (Model.Status.ToString() != "Completed" && Model.DueDate < DateTime.Now)
                            {
                                <span class="text-danger ms-2">(Протерміновано)</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted d-block">Теги:</label>
                        @if (Model.Tags != null && Model.Tags.Any())
                        {
                            <div class="d-flex flex-wrap gap-2 mt-1">
                                @foreach (var tag in Model.Tags)
                                {
                                    <span class="badge rounded-pill bg-light text-dark border shadow-sm">
                                        <i class="bi bi-tag text-primary me-1"></i>
                                        @tag.Name
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted small"><em>Теги відсутні</em></span>
                        }
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" asp-route-todolistId="@Model.TodoListId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Назад до списку
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 me-2">
                                <i class="bi bi-pencil"></i> Редагувати
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="comments-section mb-5">
                <h4 class="mb-4"><i class="bi bi-chat-left-text me-2"></i>Коментарі (@Model.Comments.Count)</h4>

                @if (!Model.Comments.Any())
                {
                    <div class="alert alert-light border shadow-sm">Коментарів поки немає. Будьте першим!</div>
                }
                else
                {
                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                    {
                        <div class="card mb-3 border-0 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-1">
                                            <span class="fw-bold me-2">Користувач</span> <small class="text-muted">@comment.CreatedAt.ToString("g")</small>
                                        </div>
                                        <p class="mb-0" id="text-@comment.Id">@comment.Text</p>
                                    </div>

                                    <div class="dropdown ms-2">
                                        <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                            <li><button class="dropdown-item" onclick="toggleEdit(@comment.Id)"><i class="bi bi-pencil me-2"></i>Редагувати</button></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-action="DeleteComment" method="post" onsubmit="return confirm('Видалити коментар?')">
                                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                                    <input type="hidden" name="taskId" value="@Model.Id" />
                                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-trash me-2"></i>Видалити</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div id="edit-form-@comment.Id" style="display:none;" class="mt-3 p-3 bg-light rounded shadow-sm">
                                    <form asp-action="EditComment" method="post">
                                        <input type="hidden" name="commentId" value="@comment.Id" />
                                        <input type="hidden" name="taskId" value="@Model.Id" />
                                        <div class="mb-2">
                                            <textarea name="newText" class="form-control" rows="2" required>@comment.Text</textarea>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-success btn-sm">Зберегти</button>
                                            <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEdit(@comment.Id)">Скасувати</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }

                <div class="card border-0 shadow-sm mt-4 overflow-hidden">
                    <div class="card-body p-0">
                        <form asp-action="AddComment" method="post">
                            <input type="hidden" name="taskId" value="@Model.Id" />
                            <textarea name="commentText" class="form-control border-0 p-3" rows="3" placeholder="Залишити коментар..." style="resize: none;" required></textarea>
                            <div class="bg-light p-2 d-flex justify-content-end border-top">
                                <button type="submit" class="btn btn-primary px-4 btn-sm">Відправити</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleEdit(id) {
            const form = document.getElementById('edit-form-' + id);
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        }
    </script>
}