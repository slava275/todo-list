@model TaskModel

@{
    ViewData["Title"] = "Редагувати завдання";
    var todolistId = Model.TodoListId;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h4>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TodoListId" />

                        <div class="mb-3">
                            <label asp-for="Title" for="Title" class="form-label fw-bold">Назва</label>
                            <input asp-for="Title" id="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" for="Description" class="form-label fw-bold">Опис</label>
                            <textarea asp-for="Description" id="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <span class="form-label fw-bold"><i class="bi bi-person-badge"></i> Виконавець</span>
                            <div class="input-group">
                                <input type="hidden" asp-for="AssigneeId" id="assigneeIdInput" />

                                <input type="text" id="assigneeNameDisplay" class="form-control bg-light"
                                       value="@(string.IsNullOrEmpty(Model.AssigneeId) ? "Не призначено" : Model.AssigneeId)" readonly />

                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#assignUserModal">
                                    <i class="bi bi-search"></i> Змінити
                                </button>

                                @if (!string.IsNullOrEmpty(Model.AssigneeId))
                                {
                                    <button type="button" class="btn btn-outline-danger" onclick="clearAssignee()">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" for="DueDate" class="form-label fw-bold">Дедлайн</label>
                            <input asp-for="DueDate" id="DueDate" type="date" class="form-control"
                                   value="@Model.DueDate?.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" for="Status" class="form-label fw-bold">Статус</label>
                            <select asp-for="Status" id="Status" class="form-select"
                                    asp-items="Html.GetEnumSelectList<Statuses>()">
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <span class="form-label fw-bold"><i class="bi bi-tags"></i> Керування тегами</span>
                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    @if (Model.Tags != null && Model.Tags.Any())
                                    {
                                        @foreach (var tag in Model.Tags)
                                        {
                                            <span class="badge rounded-pill bg-white text-dark border d-inline-flex align-items-center px-2 py-1 shadow-sm">
                                                @tag.Name
                                                <button type="submit" asp-action="RemoveTag" asp-route-taskId="@Model.Id" asp-route-tagId="@tag.Id"
                                                        class="btn-close ms-2" style="font-size: 0.5rem;" aria-label="Видалити"></button>
                                            </span>
                                        }
                                    }
                                </div>

                                <div class="input-group input-group-sm">
                                    <input type="text" name="tagName" class="form-control" placeholder="Назва тегу...">
                                    <button type="submit" asp-action="AddTag" asp-route-taskId="@Model.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-plus-circle"></i> Додати
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-route-todolistId="@Model.TodoListId"
                               class="btn btn-outline-secondary">Скасувати</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle"></i> Зберегти зміни
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="assignUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Вибір виконавця</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="userSearchInput" class="form-control mb-3"
                       placeholder="Введіть email або ім'я (мін. 3 символи)..." autocomplete="off">
                <div id="searchResults" class="list-group shadow-sm" style="max-height: 300px; overflow-y: auto;">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const searchInput = document.getElementById('userSearchInput');
        const resultsContainer = document.getElementById('searchResults');
        const assigneeIdInput = document.getElementById('assigneeIdInput');
        const assigneeNameDisplay = document.getElementById('assigneeNameDisplay');

        searchInput.addEventListener('input', async (e) => {
            const query = e.target.value.trim();
            if (query.length < 3) {
                resultsContainer.innerHTML = '';
                return;
            }

            try {
                const response = await fetch(`/TodoList/GetUsersJson?query=${encodeURIComponent(query)}`);
                const users = await response.json();

                if (users.length === 0) {
                    resultsContainer.innerHTML = '<div class="list-group-item text-muted">Користувачів не знайдено</div>';
                    return;
                }

                resultsContainer.innerHTML = users.map(user => `
                    <button type="button" class="list-group-item list-group-item-action"
                            onclick="selectAssignee('${user.id}', '${user.userName}')">
                        <div class="fw-bold">${user.userName}</div>
                        <small class="text-muted">${user.email}</small>
                    </button>
                `).join('');
            } catch (error) {
                console.error('Помилка пошуку:', error);
            }
        });

        function selectAssignee(id, name) {
            assigneeIdInput.value = id;
            assigneeNameDisplay.value = name;

            const modalElement = document.getElementById('assignUserModal');
            const modal = bootstrap.Modal.getInstance(modalElement);
            modal.hide();

            searchInput.value = '';
            resultsContainer.innerHTML = '';
        }

        function clearAssignee() {
            assigneeIdInput.value = "";
            assigneeNameDisplay.value = "Не призначено";
        }
    </script>
}