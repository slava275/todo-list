@model TaskModel

@{
    ViewData["Title"] = "Редагувати завдання";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h4>
                </div>
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TodoListId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Назва</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Опис</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label fw-bold">Дедлайн</label>
                            <input asp-for="DueDate" type="date" class="form-control"
                                   value="@Model.DueDate?.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Статус</label>
                            <select asp-for="Status" class="form-select"
                                    asp-items="Html.GetEnumSelectList<Statuses>()">
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <label class="form-label fw-bold"><i class="bi bi-tags"></i> Керування тегами</label>

                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    @if (Model.Tags != null && Model.Tags.Any())
                                    {
                                        @foreach (var tag in Model.Tags)
                                        {
                                            <span class="badge rounded-pill bg-white text-dark border d-inline-flex align-items-center px-2 py-1 shadow-sm">
                                                @tag.Name
                                                <button type="submit" asp-action="RemoveTag" asp-route-taskId="@Model.Id" asp-route-tagId="@tag.Id"
                                                        class="btn-close ms-2" style="font-size: 0.5rem;" aria-label="Видалити"></button>
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Тегів ще немає</span>
                                    }
                                </div>

                                <div class="input-group input-group-sm">
                                    <input type="text" name="tagName" class="form-control" placeholder="Назва тегу...">

                                    <button type="submit" asp-action="AddTag" asp-route-taskId="@Model.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-plus-circle"></i> Додати
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-route-todolistId="@Model.TodoListId"
                               class="btn btn-outline-secondary">Скасувати</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle"></i> Зберегти зміни
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}