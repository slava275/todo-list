@model IEnumerable<TaskModel>

@{
    ViewData["Title"] = "Tasks";
    var todolistId = ViewBag.TodoListId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a asp-controller="TodoList" asp-action="Index" class="btn btn-outline-secondary btn-sm mb-2">
                <i class="bi bi-arrow-left"></i> Назад до списків
            </a>
            <h2>@ViewData["Title"]</h2>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <a href="/TasksApp/Create/@todolistId" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Додати завдання
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning shadow-sm">
            <i class="bi bi-info-circle"></i> У цьому списку ще немає жодного завдання.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th>Назва</th>
                            <th>Опис</th>
                            <th>Статус</th>
                            <th class="text-end">Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model)
                        {
                            bool isOverdue = task.Status.ToString() != "Completed" &&
                            task.DueDate < DateTime.Now;

                            <tr class="@(isOverdue ? "table-danger" : "")">
                                <td>@task.Id</td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="@(task.Status.ToString() == "Completed" ? "text-muted text-decoration-line-through" : "fw-bold")">
                                            @task.Title
                                        </span>

                                        @if (task.Tags != null && task.Tags.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1 mt-1">
                                                @foreach (var tag in task.Tags)
                                                {
                                                    <a asp-controller="TagsApp" asp-action="Filter" asp-route-tagId="@tag.Id" asp-route-tagName="@tag.Name"
                                                       class="badge rounded-pill bg-light text-primary border text-decoration-none shadow-sm"
                                                       style="font-size: 0.7rem;">
                                                        <i class="bi bi-tag-fill small"></i> @tag.Name
                                                    </a>
                                                }
                                            </div>
                                        }
                                    </div>

                                    @if (isOverdue)
                                    {
                                        <span class="badge bg-danger mt-1"><i class="bi bi-clock-history"></i> Протерміновано</span>
                                    }
                                </td>
                                <td><small class="text-muted">@task.Description</small></td>
                                <td>
                                    @{
                                        string badgeClass = task.Status.ToString() switch
                                        {
                                            "New" => "bg-info text-dark",
                                            "InProgress" => "bg-primary",
                                            "Completed" => "bg-success",
                                            "OnHold" => "bg-warning text-dark",
                                            "Canceled" => "bg-secondary",
                                            _ => "bg-light text-dark"
                                        };
                                    }
                                    <span class="badge @badgeClass">@task.Status</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-outline-info btn-sm m-1">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-outline-secondary btn-sm m-2">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <button class="btn btn-outline-danger btn-sm m-2" onclick="confirmDelete(@task.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer bg-white border-top-0">
                @await Component.InvokeAsync("TodoListMembers", new { todoListId = todolistId })

                <button type="button" class="btn btn-outline-primary btn-sm mt-3" data-bs-toggle="modal" data-bs-target="#addMemberModal">
                    <i class="bi bi-person-plus"></i> Додати учасника
                </button>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="addMemberModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Пошук та додавання учасника</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <span class="form-label">Email або ім'я користувача</span>
                    <input type="text" id="userSearchInput" class="form-control" placeholder="Почніть вводити (мін. 3 символи)..." autocomplete="off">
                </div>

                <div id="searchResults" class="list-group shadow-sm" style="max-height: 300px; overflow-y: auto;">
                </div>
            </div>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" asp-action="Delete">
    <input type="hidden" name="id" id="deleteId" />
    <input type="hidden" name="todolistId" value="@todolistId" />
</form>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Ви впевнені, що хочете видалити це завдання?')) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }

        const searchInput = document.getElementById('userSearchInput');
        const resultsContainer = document.getElementById('searchResults');
        const currentTodoListId = '@todolistId';

        searchInput.addEventListener('input', async (e) => {
            const query = e.target.value.trim();

            if (query.length < 3) {
                resultsContainer.innerHTML = '';
                return;
            }

            try {
                const response = await fetch(`/TodoList/GetUsersJson?query=${encodeURIComponent(query)}`);
                const users = await response.json();

                if (users.length === 0) {
                    resultsContainer.innerHTML = '<div class="list-group-item text-muted">Нікого не знайдено</div>';
                    return;
                }

                resultsContainer.innerHTML = users.map(user => `
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-bold">${user.userName}</div>
                            <small class="text-muted">${user.email}</small>
                        </div>
                        <form action="/TodoList/AddMember" method="post" class="m-0">
                            <input type="hidden" name="todoListId" value="${currentTodoListId}" />
                            <input type="hidden" name="userId" value="${user.id}" />
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus"></i>
                            </button>
                        </form>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Помилка пошуку:', error);
            }
        });
    </script>
}