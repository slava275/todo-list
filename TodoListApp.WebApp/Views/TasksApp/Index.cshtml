@model IEnumerable<TaskModel>

@{
    ViewData["Title"] = "Tasks";
    // Використовуємо todolistId для всіх посилань на цій сторінці
    var todolistId = ViewBag.TodoListId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a asp-controller="TodoList" asp-action="Index" class="btn btn-outline-secondary btn-sm mb-2">
                <i class="bi bi-arrow-left"></i> Назад до списків
            </a>
            <h2>@ViewData["Title"]</h2>
        </div>

        @* Найнадійніший спосіб посилання на створення завдання *@
        <a href="/TasksApp/Create/@todolistId" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Додати завдання
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning shadow-sm">
            <i class="bi bi-info-circle"></i> У цьому списку ще немає жодного завдання.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th>Назва</th>
                            <th>Опис</th>
                            <th>Статус</th>
                            <th class="text-end">Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model)
                        {
                            bool isOverdue = task.Status.ToString() != "Completed" &&
                            task.DueDate < DateTime.Now;

                            <tr class="@(isOverdue ? "table-danger" : "")">
                                <td>@task.Id</td>
                                <td>
                                    <span class="@(task.Status.ToString() == "Completed" ? "text-muted text-decoration-line-through" : "")">
                                        @task.Title
                                    </span>
                                    @if (isOverdue)
                                    {
                                        <span class="badge bg-danger ms-2"><i class="bi bi-clock-history"></i> Протерміновано</span>
                                    }
                                </td>
                                <td><small class="text-muted">@task.Description</small></td>
                                <td>
                                    @{
                                        string badgeClass = task.Status.ToString() switch
                                        {
                                            "New" => "bg-info text-dark",
                                            "InProgress" => "bg-primary",
                                            "Completed" => "bg-success",
                                            "OnHold" => "bg-warning text-dark",
                                            "Canceled" => "bg-secondary",
                                            _ => "bg-light text-dark"
                                        };
                                    }
                                    <span class="badge @badgeClass">@task.Status</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-outline-info btn-sm m-1">
                                            <i class="bi bi-eye"></i> Details
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-outline-secondary btn-sm m-2">
                                            <i class="bi bi-pencil"></i>Edit
                                        </a>

                                        <button class="btn btn-outline-danger btn-sm m-2" onclick="confirmDelete(@task.Id)">
                                            <i class="bi bi-trash"></i>Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<form id="deleteForm" method="post" asp-action="Delete">
    <input type="hidden" name="id" id="deleteId" />
    <input type="hidden" name="todolistId" value="@todolistId" />
</form>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Ви впевнені, що хочете видалити це завдання?')) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}