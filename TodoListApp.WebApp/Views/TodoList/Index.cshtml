@model IEnumerable<TodoListModel>

@{
    ViewData["Title"] = "My Todos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        @if (@TempData["UserEmail"] != null)
        {
            <h3>Hello, @TempData["UserEmail"]</h3>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Створити новий список
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            У вас поки немає жодного списку справ. Створіть перший!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted">@item.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">
                            <a asp-controller="TasksApp" asp-action="Index" asp-route-todolistId="@item.Id" class="btn btn-primary">
                                Завдання
                            </a>

                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <button type="button"
                                        class="btn btn-outline-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        onclick="prepareDelete(@item.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Видалення списку</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="Delete" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" id="itemToDeleteId" />

                    <p class="text-center my-3">
                        <strong>Ви впевнені, що хочете видалити цей список?</strong>
                        <br />
                        <span class="text-danger"><i class="bi bi-exclamation-triangle"></i> Цю дію неможливо буде скасувати.</span>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                    <button type="submit" class="btn btn-danger">Підтвердити видалення</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function prepareDelete(id) {
            document.getElementById('itemToDeleteId').value = id;
        }
    </script>
}